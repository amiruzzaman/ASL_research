---
export type Props = {
  title: string;
};

const { title, ...rest } = Astro.props;

---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
</head>

<body class="h-screen p-5 container flex flex-col gap-2 justify-center align-center m-auto md:max-w-3xl">
  <slot /> 
</body>
</html>

<style is:global>
  @import "tailwindcss";
</style>
