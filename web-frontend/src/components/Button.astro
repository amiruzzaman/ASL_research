---
import type { HTMLTag, Polymorphic } from 'astro/types'

export type Props<Tag extends HTMLTag = "button"> = Polymorphic<{ as: Tag }>;

const { as: Tag = "button", class: className, ...rest } = Astro.props;
---

<Tag class:list={[className, "rounded text-2xl text-white py-2 px-8 bg-blue-600 disabled:bg-blue-300"]} {...rest}>
  <slot />
</Tag>
